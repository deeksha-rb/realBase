<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>realBase|console</title>
    <link rel="stylesheet" href="css/display.css">
    <link rel="icon" href="images/logo.png" type="images/png">
</head>
<body>
    <h1>Enter your table Data</h1>
    
    <form id="dataForm">        
        <div class="box">
            <a href="#" id="addRow" class="add">&plus; Add Row</a>
            <div class="table">
                <table id="dataTable">
                    <thead>
                        <tr>
                            {{#each columns}}
                                <th>{{this.Field}}</th>
                            {{/each}}
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            {{#each columns}}
                                <td><input type="text" name="{{this.Field}}" required></td>
                            {{/each}}
                        </tr>
                    </tbody>
                </table>
                <button type="button" id="submitData" class="submit-button">Apply</button>
                <input type="hidden" id="currentTableInput" name="currentTable" value="{{ selectedTable }}">
            </div>
        </div>
    </form>

    <script>
        const tableBody = document.querySelector("#dataTable tbody");
        const addRowButton = document.getElementById("addRow");
        const submitButton = document.getElementById("submitData");
        const form = document.getElementById("dataForm");

        addRowButton.addEventListener('click', function() {
            const newRow = document.createElement("tr");
            document.querySelectorAll("#dataTable tbody tr:first-child td").forEach(function(cell) {
                const newCell = document.createElement("td");
                const input = document.createElement("input");
                input.type = "text";
                input.name = cell.querySelector('input').name; 
                newCell.appendChild(input);
                newRow.appendChild(newCell);
            });
            tableBody.appendChild(newRow);
        });

        submitButton.addEventListener('click', function() {
            const formData = new FormData(form);
            fetch('/display', {
                method: 'POST',
                body: formData
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                console.log('Data:', data);
                // If insertion is successful, clear the form and add a new row
                form.reset();
                addRowButton.click(); // Simulate clicking the "Add Row" button
            })
            .catch(error => {
                console.error('Error:', error);
            });
        });
    </script>
    
</body>
</html>



